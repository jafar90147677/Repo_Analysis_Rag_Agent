{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "sourceMap": true,
    "rootDir": "..",
    "outDir": "out",
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "vscode", "mocha"],
    "baseUrl": ".",
    "paths": {
      "axios": ["./node_modules/axios/index.js"],
      "expect": ["./node_modules/expect/build/index.js"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["src", "../tests", "../unittests"]
}
